<Window x:Class="XmlGeneratorNew.Views.TypeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тип шаблона" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" MinWidth="320">
        <TextBlock Text="Выберите тип шаблона:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
        <CheckBox Content="Консультация" IsChecked="{Binding IsConsultation, Mode=TwoWay}" Margin="0,5"/>
        <CheckBox Content="Инструментальное исследование" IsChecked="{Binding IsInstrumental, Mode=TwoWay}" Margin="0,5"/>
        <CheckBox Content="Лабораторное исследование" IsChecked="{Binding IsLaboratory, Mode=TwoWay}" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>