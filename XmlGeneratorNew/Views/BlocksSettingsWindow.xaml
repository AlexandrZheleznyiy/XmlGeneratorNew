<Window x:Class="XmlGeneratorNew.Views.BlocksSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Блоки шаблона" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" MinWidth="320">
        <TextBlock Text="Выберите блоки:" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
        <CheckBox Content="Диагнозы" IsChecked="{Binding IsDiagnosis, Mode=TwoWay}" Margin="0,5"/>
        <CheckBox Content="Назначения" IsChecked="{Binding IsAssignments, Mode=TwoWay}" Margin="0,5"/>
        <CheckBox Content="Лечебные действия" IsChecked="{Binding IsTreatmentActions, Mode=TwoWay}" Margin="0,5"/>
        <CheckBox Content="Вложения" IsChecked="{Binding IsAttachments, Mode=TwoWay}" Margin="0,5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Отмена" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>