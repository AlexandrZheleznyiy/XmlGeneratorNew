<Window x:Class="XmlGeneratorNew.Views.NamespaceSettingsWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title=" Настройка   пространств   имен " SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" MinWidth="320" MinHeight="260">
        <StackPanel Orientation="Vertical" Margin="0,0,0,12">
            <TextBlock Text=" Имя   шаблона  ( атрибут  name  для   элемента  consultation):" FontWeight="SemiBold" FontSize="14" />
            <TextBox Text="{Binding TemplateName, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,0" />
        </StackPanel>
        <ItemsControl x:Name="NamespacesList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding DisplayName}" IsChecked="{Binding IsSelected, Mode=TwoWay}" FontSize="14" Margin="0,4"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content=" Отмена " Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>